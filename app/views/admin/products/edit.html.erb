<h2> Edit Product </h2>

<%= simple_form_for [:admin, @product] do |f| %>

  <div class="group">
    <%= f.input :title %>
  </div>

  <div class="group">
    <%= f.input :description %>
  </div>

  <div class="group">
    <%= f.input :quantity %>
  </div>

  <div class="group">
    <%= f.input :price %>
  </div>

 <% if @product.image.present? %>
    <span>目前商品图</span> <br>
    <%= image_tag(@product.image.thumb.url) %>
 <% end %>

 <div class="group">
    <%= f.input :image, as: :file %>
 </div>

 <div class="group">
        <%= select_tag(:category_id, options_for_select(@categories), :prompt => "Category") %>
 </div>

  <div class="group">
        <%= f.input :detail, as: :wysihtml5, :label => "商品详情" %>
  </div>

  <%= f.submit "Submit", data: { disable_with: "Submitting..." } %>

<% end %>

<!--输入框大小js-->
<script type="text/javascript">
  autosize($('#product_description'));
</script>
